<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.a14n12.tinhdiemthpt.Fragments.OverviewFragment">

    <LinearLayout
        android:id="@+id/ln_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:gravity="center">

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:text="Môn học"
            android:textColor="@color/color_textEdit"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:text="Hệ số 1"
            android:textColor="@color/color_textEdit"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:text="Hệ số 2"
            android:textColor="@color/color_textEdit"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:text="Hệ số 3"
            android:textColor="@color/color_textEdit"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:text="Tổng"
            android:textColor="@color/color_textEdit"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
    <ListView
        android:layout_below="@id/ln_top"
        android:id="@+id/lv_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ln_bottom"/>
    <RelativeLayout
        android:id="@+id/ln_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:background="@color/colorPrimary">
        <TextView
            android:padding="@dimen/margin_small"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="Tổng kết chung: "
            android:textColor="@color/color_white"
            />
        <TextView
            android:id="@+id/tv_core_total"
            android:padding="@dimen/margin_small"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:text="9.8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:textColor="@color/color_white"
            />

    </RelativeLayout>
</RelativeLayout>
