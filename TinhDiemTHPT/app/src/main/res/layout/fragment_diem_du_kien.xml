<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_marginTop="@dimen/margin_medium"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textColor="@color/color_text"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_small"
        android:layout_marginRight="@dimen/margin_medium"
        android:text="Chọn Môn:" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/bg_spinner">
        <Spinner
            android:id="@+id/spinnerChonMon"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/duongthang" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_height="63dp">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTBMon"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:textColor="@color/color_textEdit"
                android:text="Trung bình môn" />

            <TextView
                android:id="@+id/textView_monTB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_text"
                android:text="TextView" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_DiemTbm"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/margin_small"
            android:gravity="center|left"
            android:text="-:-"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/color_textEditRed"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTKChung"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:textColor="@color/color_textEdit"
                android:text="Tổng kết chung" />

            <TextView
                android:id="@+id/textView_hocki"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_text"
                android:text="TextView" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_DiemTbHKi"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center|left"
            android:text="-:-"
            android:padding="@dimen/margin_small"
            android:textColor="@color/color_textEditRed"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/duongthang" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:textColor="@color/color_text"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_small"
        android:text="Nhập Điểm:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_Diem"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:cursorVisible="false"
            android:hint="Điểm"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText_HeSo"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:focusableInTouchMode="false"
            android:hint="Hệ số"
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_SoLuong"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:focusableInTouchMode="false"
            android:hint="Số lượng"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/button_NhapDiem"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/bg_button_input"
        android:text="Nhập"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_large"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium">

        <TableLayout
            android:id="@+id/tb_DiemDuKien"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:shrinkColumns="0"
            android:stretchColumns="3">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView_Diem"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:background="@drawable/bg_table_row"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_medium"
                    android:text="Điểm"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textView_HeSo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:background="@drawable/bg_table_row"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_medium"
                    android:text="Hệ số"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textView_SoLuong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:background="@drawable/bg_table_row"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_medium"
                    android:text="Số lượng"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textView_Delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:background="@drawable/bg_table_row"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_medium"
                    android:text=""
                    android:textColor="@color/colorPrimary"/>

            </TableRow>

        </TableLayout>

    </ScrollView>

</LinearLayout>
