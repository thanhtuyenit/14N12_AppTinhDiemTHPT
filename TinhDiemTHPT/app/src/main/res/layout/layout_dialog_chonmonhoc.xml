<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_medium">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="CHỌN MÔN HỌC"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spn_mon_hoc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="@dimen/margin_small" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="@dimen/margin_medium"
        android:background="@drawable/duongthang" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Close1"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/margin_medium"
            android:background="@drawable/bg_button_close"
            android:text="ĐÓNG"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Update1"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:background="@drawable/bg_button_capnhat"
            android:text="CHỌN"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
